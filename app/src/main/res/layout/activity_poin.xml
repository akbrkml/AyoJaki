<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.termal.ayojaki.view.PoinActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hai, Shinta!"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Poin kamu saat ini adalah"
        android:gravity="center"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:src="@drawable/blueic"
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="880 pts"
        android:gravity="center"/>

    <Button
        android:id="@+id/tukarpoinButton"
        android:onClick="poinButton"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tukar Poin"
        android:padding="20dp"
        android:layout_gravity="center"/>

</LinearLayout>
